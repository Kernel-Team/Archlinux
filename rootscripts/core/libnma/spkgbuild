# description	: NetworkManager GUI client library
# homepage	: https://wiki.gnome.org/Projects/NetworkManager
# maintainer	: Emmett1, emmett1 dot 2miligrams dot gmail dot com
# depends	: mobile-broadband-provider-info glib networkmanager gtk3 cairo gcr vala gobject-introspection

name=libnma
version=1.8.28
release=1
source="https://github.com/GNOME/libnma/archive/$version/$name-$version.tar.gz"

build() {
	cd $name-$version
	
	mkdir build
        cd    build

        meson --prefix=/usr \
              --sysconfdir=/etc \
	      -Dgtk_doc=false
	ninja
	DESTDIR=$PKG ninja install
}
